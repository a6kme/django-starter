    "version": "0.2.0",
    "configurations": [
        {
            "name": "[Dev] Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/api/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env.dev"
        },
        {
            "name": "Make Migrations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/api/manage.py",
            "args": [
                "makemigrations"
            ],
            "django": true,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env.dev"
        },
        {
            "name": "[Dev] Migrate",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/api/manage.py",
            "args": [
                "migrate"
            ],
            "django": true,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env.dev"
        }
    ]
}
